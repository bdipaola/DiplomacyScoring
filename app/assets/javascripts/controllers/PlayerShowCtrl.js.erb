angular.module("DiplomacyApp")
.controller('PlayerShowCtrl', function($scope, $routeParams, $location, playerShow){
	$scope.playerId = $routeParams.id;	
	
	playerShow.loadPlayer($scope.playerId);

	$scope.player = playerShow.data;

	$scope.viewGame = function(gameId){
		$location.url('/games/' + gameId);
	};
})
.$inject = ['$scope','$routeParams', '$location', 'playerShow'];