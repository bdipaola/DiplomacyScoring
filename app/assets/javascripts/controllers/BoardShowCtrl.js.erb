angular.module("DiplomacyApp")
.controller('BoardShowCtrl', function($scope, $routeParams, $location, boardShow, playerShow){
	var boardNumber = $routeParams.id;
	
	$scope.board = boardShow;	
	boardShow.loadBoard(boardNumber);
})
.$inject = ['$scope','$routeParams', '$location', 'boardShow', 'playerShow'];